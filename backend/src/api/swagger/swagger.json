{
  "swagger": "2.0",
  "info": {
    "version": "0.8.1",
    "title": "ilSaye Backend API",
    "description": "A event communication app for large audiences"
  },
  "schemes": [
    "https", "http"
  ],
  "host": "ilsayebackend.azurewebsites.net",
  "basePath": "/api/v1",
  "paths": {
    "/persons": {
      "get": {
        "summary": "Gets some persons",
        "description": "Returns a list containing all persons.",
        "responses": {
          "200": {
            "description": "A list of Person",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}